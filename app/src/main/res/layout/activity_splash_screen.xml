<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#000000"
    android:padding="50dp"
    >
    <ImageView
        android:id="@+id/ImageView_Logo"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/trucking_logo"

        />
    <TextView
        android:id="@+id/ImageView_AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trucking"
        android:background="@drawable/roundededittext"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/ImageView_Logo"
        android:layout_alignRight="@+id/ImageView_Logo"
        android:layout_alignBottom="@id/ImageView_Logo"
        android:gravity="center"
        android:textSize="36dp"
        />

    <com.felipecsl.gifimageview.library.GifImageView
        android:id="@+id/GIFImageView"
        android:scaleType="center"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>